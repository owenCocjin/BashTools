#!/bin/bash
## Author:	Owen Cocjin
## Version:	2.0
## Date:	10/12/20
## Title:	cl
## Description: List directories after moving into them
## Notes:
##    - Added 'cll' command

cl(){
	if [[ -z "$*" ]]; then
		cd ~
	else
		cd "$*"
	fi
	(($? == 0)) && ls --color=yes "$PWD"
}

cll(){
	#Like 'cl', but lists long format
	if [[ -z "$*" ]]; then
		cd ~
	else
		cd "$*"
	fi
	(($? == 0)) && ls -l --color=yes "$PWD"
}
